<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_round"
        android:enableOnBackInvokedCallback="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:configChanges = "keyboardHidden|orientation|screenSize"
        android:windowSoftInputMode="adjustPan"
        android:theme="@style/Theme.OCS"
        tools:targetApi="31">
        <activity
            android:name=".Intro.admin.appointments"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".Intro.admin.doctors"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".Intro.patient.booking.BookAppointment"
            android:exported="false" />
        <activity
            android:name=".Intro.admin.profile"
            android:exported="false"
            />
        <activity
            android:name=".Intro.patient.services.services"
            android:exported="false" />
        <activity
            android:name=".Intro.Login.RegisterContinue"
            android:theme="@style/Theme.OCS"
            android:exported="false"
            android:parentActivityName=".Intro.Login.Register"
             />
        <activity
            android:name=".Intro.Login.Register"
            android:exported="false"
            android:theme="@style/Theme.OCS"
             />
        <activity
            android:name=".Intro.Login.login"
            android:exported="false"
            android:theme="@style/Theme.OCS" />
        <activity
            android:name=".Intro.IntroSlider.IntroSlider"
            android:exported="false"
            android:theme="@style/splash" />
        <activity
            android:name=".Intro.IntroSlider.splashScreen"
            android:exported="true"
            android:theme="@style/splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>