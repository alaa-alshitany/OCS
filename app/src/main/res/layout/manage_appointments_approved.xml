<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#0969C4"
    android:outlineProvider="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView5"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight=".2"
            android:fontFamily="@font/acme_regular"
            android:gravity="center"
            android:text="@string/book_appointment_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/blue_500"
            android:textStyle="bold"
            tools:text="@string/Approved_title" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/appointment__approvedrecycle"
            android:layout_width="331dp"
            android:layout_height="428dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight=".2"


            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="8dp"
        android:layout_weight=".2"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_req"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#A6CFF5"
            android:outlineProvider="none"
            android:text="Button"
            android:textColor="#0E0E0E"
            android:textStyle="bold"
            app:iconPadding="8dp"
            app:iconTint="@color/black"
            tools:text="@string/request_button" />

        <Button
            android:id="@+id/btn_approved"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#A6CFF5"
            android:outlineProvider="none"
            android:text="Button"
            android:textColor="#0E0E0E"
            android:textStyle="bold"
            app:iconPadding="8dp"
            app:iconTint="@color/black"
            tools:text="@string/approved_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>