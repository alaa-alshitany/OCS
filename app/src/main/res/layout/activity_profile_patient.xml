<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Intro.patient.Profile.Profile">
    <Space
        android:layout_width="match_parent"
        android:layout_weight=".2"
        android:layout_height="0dp">

    </Space>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:layout_margin="5dp"
                        android:src="@drawable/baseline_account_circle_24">

                    </ImageView>

                    <TextView
                        android:id="@+id/patientName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_font"
                        android:text="TextView"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="" />
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </Space>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="40dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/edt_calender"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:drawablePadding="20dp"
            android:hint=" 6 july 2000 "
            android:inputType="text"
            android:textSize="20dp"
            style="@style/EditText"
            android:textStyle="bold"/>
<Space
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".4">

</Space>


        <TextView
            android:id="@+id/edt_call"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/baseline_phone_24"
            android:drawablePadding="20dp"
            android:hint=" 01025896321 "
            android:inputType="phone"
            android:textSize="20dp"
            style="@style/EditText"
            android:textStyle="bold"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4">

        </Space>
        <TextView
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="20dp"
            android:hint=" mona334@gmail.com  "
            android:inputType="textEmailAddress"
            android:textSize="20dp"
            style="@style/EditText"
            android:textStyle="bold"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4">

        </Space>

        <TextView
            android:id="@+id/edt_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/baseline_location_on_24"
            android:drawablePadding="20dp"
            android:hint="Tanta, Al Gharbiyah "
            android:inputType="text"
            android:textSize="20dp"
            style="@style/EditText"
            android:textStyle="bold"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4">

        </Space>
    </LinearLayout>
</LinearLayout>
