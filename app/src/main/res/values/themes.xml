<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OCS" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/blue_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_500</item>
        <item name="colorOnSecondary">@color/blue_500</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="actionBarSize">50dp</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionOverflowButtonStyle">@style/ThreeDotStyle</item>

        <!--back arrow color-->
        <item name="colorControlNormal">@color/blue_500</item>

    </style>

    <style name="SearchToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/blue_500</item>
    </style>

    <style name="ThreeDotStyle" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/blue_500</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/acme_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="titleTextColor">@color/blue_500</item>
    </style>

    <style name="splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/blue_500</item>

        <item name="android:windowLightStatusBar">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blue_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
    </style>



    <style name="Theme.OCS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="Theme.OCS.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="EditText">
    <item name="android:singleLine">true</item>
    <item name="strokeColor">@color/black_transparent</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:background">@drawable/edit_text_style</item>
    <item name="android:padding">16dp</item>
</style>



</resources>